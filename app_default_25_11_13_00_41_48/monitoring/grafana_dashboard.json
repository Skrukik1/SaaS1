{
  "dashboard": {
    "id": null,
    "title": "Application Health Dashboard",
    "panels": [
      {
        "type": "graph",
        "title": "API Response Time",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(app_request_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile"
          }
        ]
      },
      {
        "type": "graph",
        "title": "Rate Limiting Stats",
        "targets": [
          {
            "expr": "sum(rate(app_rate_limit_exceeded_total[5m]))"
          }
        ]
      },
      {
        "type": "table",
        "title": "Error Logs",
        "targets": [
          {
            "expr": "app_errors_total"
          }
        ]
      },
      {
        "type": "graph",
        "title": "Bot Command Usage",
        "targets": [
          {
            "expr": "sum(rate(bot_command_executions_total[5m])) by (command)"
          }
        ]
      }
    ]
  }
}
