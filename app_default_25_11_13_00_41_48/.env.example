# Backend Database URL (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# Redis URL for cache and rate limiting
REDIS_URL=redis://localhost:6379/0

# Discord Bot Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# JWT Secret Key for token signing
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT token expiration in seconds (e.g. 3600 = 1 hour)
JWT_ACCESS_TOKEN_EXPIRE_SECONDS=3600

# OAuth2 Client Credentials
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_AUTHORIZATION_URL=https://provider.com/oauth2/auth
OAUTH2_TOKEN_URL=https://provider.com/oauth2/token
OAUTH2_USERINFO_URL=https://provider.com/oauth2/userinfo
OAUTH2_REDIRECT_URL=http://localhost:8000/auth/callback

# Rate Limiter Settings
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_ADMIN=1000/minute

# Logging Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN (optional)
SENTRY_DSN=

# Monitoring endpoints
PROMETHEUS_METRICS_PATH=/metrics
PROMETHEUS_SCRAPE_INTERVAL=15s

# Discord Bot Settings
DISCORD_COMMAND_PREFIX=!
DISCORD_SPAM_PROTECTION_ENABLED=true
DISCORD_COMMAND_COOLDOWN_SECONDS=5

# Environment mode: development, staging, production
ENVIRONMENT=development
